{% extends 'base.html.twig' %}


{% block body %}
    <div class="container center-div offset-4 pagination-centered">
        <div class="row">

            <h1 class="text-danger " style="padding-right: 4%">RUNIVPM Admin</h1>

        </div>
        <div class="col-4" style="margin-left: 4%">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{ path('login_admin') }}" method="post">
                <label for="username">Username:</label>
                <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}"/>

                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" name="_password"/>

                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}
                <br>
                <button type="submit" class="btn btn-danger">Login</button>
            </form>
        </div>

        </div>
    </div>
{% endblock %}